<div class="container">
<h1 class="text-center mt-5">予定を入力してください</h1>

  <%= form_with(model: @motion, local: true) do |form| %>
  <%= render 'shared/error_messages', model: form.object %>
    <div class="text-center  mx-auto mt-3">
    <h2 class="text-center">現在の体重を入力してください</h2>
    <%= form.number_field :weight, step: '0.1', min: "30",placeholder: "55", class:"text-center h1  w-25"%><em>kg</em>
    </div>

    <div class="d-flex align-content-center flex-wrap ">
      <div class="border flex-fill m-2 p-4 text-center">
        <h2 class="">予定・行う時間を入力してください</h2>
        <div class="px-4">
        <p>1項目</p>
        <%= form.text_field :plans1, placeholder: "予定",class:" text-center h1 w-50"%>
        <%= form.time_field :count1, class:"text-center h1 w-50 my-3 "%>
        </div>

        <div class=" px-4">
        <p>2項目</p>
        <%= form.text_field :plans2, placeholder: "予定",class:"text-center h1 w-50" %>
        <%= form.time_field :count2, class:"text-center h1 w-50 my-3 " %>
        </div>

        <div class="px-4">
          <p>3項目</p>
        <%= form.text_field :plans3, placeholder: "予定",class:"text-center h1 w-50"%>
        <%= form.time_field :count3, class:"text-center h1 w-50  my-3" %>
        </div>

        <div class=" px-4">
          <p>4項目</p>
        <%= form.text_field :plans4, placeholder: "予定",class:"text-center h1 w-50" %>
        <%= form.time_field :count4, class:"text-center h1 w-50 my-3" %>
        </div>

        <div class="px-4">
          <p>5項目</p>
        <%= form.text_field :plans5, placeholder: "予定",class:"text-center h1 w-50" %>
        <%= form.time_field :count5, class:"text-center h1 w-50  my-3" %>
        </div>  
      </div>
      
        <div class="text-center flex-fill m-2 py-4 border ">
        <p class="text-center pb-4">今日のメモを残せます</p>
        <%= form.text_area :memo, placeholder: "任意で記入できます",class:"w-75 h-50 h1"%>
        </div>
  
    </div>
    <div class="text-center p-3  mx-auto">
    <span><%= form.submit "決定", class:"fs-3 btn btn-outline-dark p-3", style: "width: 300px;"%></span>
    </div>
  <% end %>
</div>