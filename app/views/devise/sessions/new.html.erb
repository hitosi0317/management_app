<main>
  
<div class="container py-5 mx-auto", style="line-height:2rem">
<div class="offset-lg-4">
<h1 class="mb-5">ログイン</h1>

<%= form_with model: @user,url: user_session_path, local: true do |f| %>
   <div>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="my-3">
    <%= f.label :email,class: "fs-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"py-2" %>
  </div>

  <div class=" my-3">
    <%= f.label :password,class: "fs-3" %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"py-2" %>

  
  <div class="my-3">
    <%= f.label :email,class: "fs-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-50 fs-4" %>
  </div>

  <div class=" my-3">
    <%= f.label :password,class: "fs-3" %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"w-50 fs-4" %>
  </div>
  
  <% if devise_mapping.rememberable? %>
    <div class="my-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,class: "fs-3"%>
    </div>
  <% end %>

  <div class="my-3">
    <%= f.submit "ログイン" ,class:"fs-3 btn btn-outline-dark p-3", style: "width: 300px;"%>
  </div>
<% end %>

<%= render "devise/shared/links"%>

</div>
</div>
</main>