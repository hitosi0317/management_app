<main>
<div class=" container  border py-5 fs-4 mx-auto">
<div class="offset-lg-4">
<h1 class="mb-5 ">新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
   <div class="my-3 ">
        <%= f.label :nickname, class: "h2" %> <em>(10 characters maximum)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "10",  class:"col-6" %>
   </div>

   <div class="my-3 ">
    <%= f.label :height, class: "  h2" %> <em>(小数点以下第一位まで使用可能)</em><br />
    <%= f.number_field :height, step: '0.1',placeholder: "123.4", min: "120", class:"text-center"%>
  </div>


  <div class="my-3">
    <%= f.label :email, class: " h2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"" %>
  </div>

  <div class="my-3 ">
    <%= f.label :password ,class:" h2"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"  col-sm-8 " %>
  </div>

  <div class="my-3 ">
    <%= f.label :password_confirmation, class:" h2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:" mb-5" %>
  </div>

  <div class="fs-1-sm ">
    <%= f.submit "登録", class:"mb-5  px-5" %>
  </div>
<% end %>
<div class="">
<%= render "devise/shared/links",class:"d-block text-center " %>
</div>
</div>
</main>