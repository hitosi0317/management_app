<main>
<div class=" container text-center border py-5 fs-4", style="line-height:2rem">
<h1 class="mb-5">新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
   <div class="">
        <%= f.label :nickname, class: "col-sm-12 h2" %> <em>(10 characters maximum)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "10",  class:"text-center  col-xl-3  col-lg-6 col-sm-12 " %>
   </div>

   <div class="field">
    <%= f.label :height, class: "col-sm-12 h2" %> <em>(小数点以下第一位まで使用可能)</em><br />
    <%= f.number_field :height, step: '0.1',placeholder: "123.4", min: "120", class:"text-center col-xl-3  col-lg-6 col-sm-12 "%>
  </div>


  <div class="field">
    <%= f.label :email, class: "col-sm-12 h2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xl-3  col-lg-6 col-sm-12" %>
  </div>

  <div class="field">
    <%= f.label :password ,class:"col-sm-12 h2"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"col-xl-3  col-lg-6 col-sm-12 " %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:" h2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"col-xl-3  col-lg-6 col-sm-12  mb-5" %>
  </div>

  <div class="fs-1-sm">
    <%= f.submit "登録", class:"mb-5 col-xl-3 col-lg-6 col-sm-12x px-5" %>
  </div>
<% end %>

<%= render "devise/shared/links",class:"" %>
</div>
</main>